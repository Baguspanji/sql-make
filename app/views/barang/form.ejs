<%- contentFor('body') %>

    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- jquery validation -->
            <div class="card card-lightblue">
                <div class="card-header">
                    <h3 class="card-title">
                        <%= title %>
                    </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form class="needs-validation" action="<%= title.split(' ')[0] == 'Tambah' ? '/barang' : '/barang/' + data.id_barang %>" method="POST" novalidate>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Nama Barang</label>
                            <input type="text" class="form-control" name="nama_barang" required="" value="<%= (typeof data !=='undefined' ) ? data.nama_barang : '' %>">
                            <div class="invalid-feedback">
                                Masukkan Nama Barang
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Harga</label>
                            <input type="number" class="form-control" name="harga" required="" value="<%= (typeof data !=='undefined' ) ? data.harga : '' %>">
                            <div class="invalid-feedback">
                                Masukkan Harga
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">
                            <%= title.split(' ')[0] == ' Tambah' ? 'Simpan' : 'Update' %>
                        </button>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">

        </div>
        <!--/.col (right) -->
    </div>